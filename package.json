{
  "name": "browserx",
  "version": "2.1.0",
  "description": "BrowserX - AI-powered browser with smart features, history, bookmarks and session memory",
  "main": "src/main.js",
  "scripts": {
    "start": "npm run build:css && electron .",
    "build:css": "postcss ./public/css/styles.css -o ./public/css/output.css --verbose",
    "build:css:watch": "postcss ./public/css/styles.css -o ./public/css/output.css --watch --verbose",
    "dev": "npm run build:css:watch & electron .",
    "build": "npm run build:css && electron-builder --win",
    "build:portable": "npm run build:css && electron-builder --win portable",
    "build:all": "npm run build:css && electron-builder --win --publish never"
  },
  "keywords": [
    "browser",
    "chromium",
    "electron",
    "ai",
    "groq"
  ],
  "author": "Stefect",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "autoprefixer": "^10.4.24",
    "electron": "^40.1.0",
    "electron-builder": "^25.1.8",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.18"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.13.4",
    "groq-sdk": "^0.37.0"
  },
  "build": {
    "appId": "com.browserx.app",
    "productName": "BrowserX",
    "copyright": "Copyright Â© 2024-2026 Stefect",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!.git/**",
      "!.gitignore",
      "!README.md",
      "!CHANGELOG.md"
    ],
    "extraResources": [
      {
        "from": "config.js",
        "to": "config.js"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "BrowserX",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico"
    },
    "portable": {
      "artifactName": "BrowserX-Portable-${version}.${ext}"
    }
  }
}
